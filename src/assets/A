        <label className="block text-sm font-semibold text-green-800 mb-1">Price per Share (USD)</label>
        <input
          type="number"
          value={pricePerShare}
          onChange={(e) => setPricePerShare(e.target.value)}
          min={0}
          step="0.01"
          className="w-full border border-green-200 rounded-md px-4 py-2 bg-green-50/20 focus:outline-none focus:ring-2 focus:ring-green-500"
          required
        />
      </div>

      <div>
        <label className="block text-sm font-semibold text-green-800 mb-1">Total Amount (USD)</label>
        <input
