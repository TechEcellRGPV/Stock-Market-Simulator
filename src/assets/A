            <input
              type="radio"
              value="Buy"
              checked={tradeAction === 'Buy'}
              onChange={() => setTradeAction('Buy')}
              className="mr-2 text-green-600 accent-green-600"
            />
            Buy
          </label>
          <label className="flex items-center text-green-700">
            <input
              type="radio"
              value="Sell"
              checked={tradeAction === 'Sell'}
              onChange={() => setTradeAction('Sell')}
              className="mr-2 text-green-600 accent-green-600"
            />
            Sell
          </label>
        </div>
      </div>

      <div>
